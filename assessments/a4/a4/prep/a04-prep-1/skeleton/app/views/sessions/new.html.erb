<h2>Sign In</h2>

<form action="/session" method="post">
  <input
    type="text"
    name="authenticity_token"
    value="<%= form_authenticity_token %>" >

  <label>Username
    <input type="text" name="user[username]">
  </label>

  <label>Password
    <input type="password" name="user[password]">
  </label>

  <button>Sign In</button>
</form>
