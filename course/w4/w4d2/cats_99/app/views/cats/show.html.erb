<!DOCTYPE html>
<html>
<body>
  <table>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Sex</th>
      <th>Birth Date</th>
      <th>Description</th>
    </tr>

    <tr>
      <th><%= @cat.name %></th>
      <th><%= @cat.color %></th>
      <th><%= @cat.sex %></th>
      <th><%= @cat.birth_date %></th>
      <th><%= @cat.description %></th>
    </tr>

    <tr>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>

    <% @cat.cat_rental_requests.order(:start_date).each do |rental| %>
      <tr>
        <th><%= rental.start_date %></th>
        <th><%= rental.end_date %></th>
      </tr>
    <% end %>

  </table>

  <% @cat.pending_requests.each do |request| %>
    <%= button_to "Approve", action: cat_rental_request_approve_url(request) %>
    <%= button_to "Deny", action: cat_rental_request_deny_url(request) %>
    <% break %>
  <% end %>
</body>
</html>
