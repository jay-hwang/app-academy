<h2><%= @album.name %></h2>
<h3>Artist: <strong><%= @album.band.name %></strong> </h3>
<br/><br/>

<p>
  <% track_idx = 1 %>
  <strong><%= @album.name %>'s tracks</strong><br/>
  <% @album.tracks.each do |track| %>
    <%= track_idx %>
    <%= link_to track.name, track_url(track), method: :get %>
    <% track_idx += 1 %>
    <br/>
  <% end %>
</p>

<%= link_to "Add New Track", new_album_track_url(@album), method: :get %>

<br/><br/>

<%= link_to @album.band.name, band_url(@album.band), method: :get %>

<br/><br/>

<%= link_to "Delete Album", album_url(@album),
  data: {confirm: "Are you sure?"}, method: :delete %>
